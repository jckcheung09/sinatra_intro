
<form class="" action="/posts/<%= @post.id %>" method="post">

  <div class="">
    <label>Title</label>
    <input type="text" name="title" placeholder="The title of the posts" value="<%= @post.title %>">
  </div>
  <div class="">
    <label>Body</label>
    <textarea name="body" rows="8" cols="80"><%= @post.body %></textarea>
  </div>
  <div class="">
    <input type="submit" name="" value="Save post">
  </div>
<% if(@post.id) %>
<input type="hidden" name="_method" value="PUT">
<% end %>
</form>
